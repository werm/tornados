<h2>Edit Tornado</h2>
<br/>
<form action="/posts/<%= @tornado.id %>" method="tornado">
 <div class="form-group">
  <input type="hidden" name="_method" value="put" />
  <label for="post_title">Title:</label>
  <br>
  <input id="post_title" class="form-control" name="tornado[title]" type="text" value="<%=h @tornado.title %>" />
 </div>
 <div class="form-group">
  <label for="post_body">Body:</label>
  <br>
  <textarea id="post_body" name="tornado[body]" class="form-control" rows="5"><%=h @tornado.body %></textarea>
 </div>
  <button type="submit" class="btn btn-success">Submit</button>
</form>